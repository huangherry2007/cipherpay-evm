{
  "name": "cipherpay-evm",
  "version": "0.1.0",
  "description": "CipherPay EVM Implementation - Privacy-preserving payment protocol for EVM chains",
  "main": "dist/index.js",
  "scripts": {
    "build": "hardhat compile && tsc",
    "test": "hardhat test",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "coverage": "hardhat coverage",
    "deploy:mainnet": "hardhat run scripts/deploy.ts --network mainnet",
    "deploy:testnet": "hardhat run scripts/deploy.ts --network testnet",
    "deploy:local": "hardhat run scripts/deploy.ts --network localhost"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.9.0",
    "circomlibjs": "^0.1.7",
    "dotenv": "^16.0.3",
    "ethers": "^5.7.2",
    "snarkjs": "^0.6.11"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.8",
    "@nomicfoundation/hardhat-ethers": "^3.0.8",
    "@nomicfoundation/hardhat-ignition": "^0.15.11",
    "@nomicfoundation/hardhat-ignition-ethers": "^0.15.11",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.12",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@nomicfoundation/hardhat-verify": "^2.0.14",
    "@nomicfoundation/ignition-core": "^0.15.11",
    "@nomiclabs/hardhat-etherscan": "^3.1.7",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.5",
    "@types/mocha": "^10.0.1",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "chai": "^4.3.7",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "hardhat": "^2.24.2",
    "hardhat-gas-reporter": "^1.0.10",
    "prettier": "^2.8.7",
    "solidity-coverage": "^0.8.16",
    "ts-node": "^10.9.1",
    "typechain": "^8.3.2",
    "typescript": "^5.0.3"
  },
  "keywords": [
    "ethereum",
    "privacy",
    "zero-knowledge",
    "defi",
    "cipherpay"
  ],
  "author": "CipherPay Team",
